<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document | <%= title %>
    </title>
    <style type="text/css">
        body {
            margin: 0;
        }

        a {
            text-decoration: none;
            color: burlywood;
            font-size: 28px;
            font-weight: 600;
        }

        header {
            background-color: #477250;
            display: flex;
            height: 100px;
            align-items: center;
            justify-content: end;
            padding-right: 50px;
            font-size: 26px;
        }

        .menu {
            padding-right: 15px;
            transition: 1s;
        }

        .menu:hover {
            scale: 1.2;
            padding-right: 25px;
            padding-left: 25px;
        }

        .wrapper {
            height: 90vh;
            display: flex;
            align-items: center;
            justify-content: start;
            color: burlywood;
            font-size: 22px;
            background-color: brown;
            flex-direction: column;
            padding: 50px;
        }

        .posts {
            padding: 15px;
            border: 1px solid burlywood;
            border-radius: 15px;
            margin-top: 15px;
            width: 700px;
        }

        .posts-title {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .posts-title__text {
            padding: 20px 0px;
        }

        .posts-title__edit {
            height: 25px;
            width: 105px;
            background-color: #02020200;
            border: 1px solid burlywood;
            color: wheat;
            cursor: pointer;
        }

        .posts-title__button {
            height: 25px;
            width: 25px;
            background-color: #02020200;
            border: 1px solid burlywood;
            color: wheat;
            cursor: pointer;
        }

        .posts-description {
            display: flex;
            justify-content: space-between;
        }
    </style>
</head>

<body>
    <%- include('./partials/nav.ejs') %>
        <div class="wrapper">
            <div class="posts">
                <div class="posts-title">
                    <a>
                        <div class="posts-title__text">
                            <%= post.title %>
                        </div>
                    </a>
                    <div>
                        <a href="/edit/<%= post.id %>">
                            <button class="posts-title__edit">Редактировать</button>
                        </a>
                        <button class="posts-title__button" data-id="<%= post.id %>">X</button>
                    </div>
                </div>
                <div class="posts-text">
                    <span>
                        <%= post.text %>
                    </span>
                </div>
                <div class="posts-description">
                    <span>
                        <%= post.createdAt.toLocaleDateString() %>
                    </span><span>
                        <%= post.author %>
                    </span>
                </div>
            </div>
        </div>
        <script>
            document.addEventListener("click", (e) => {
                const id = e.target?.dataset?.id || null;
                console.log(id)
                if (id) {
                    fetch(`/posts/${id}`, {
                        method: 'DELETE',
                    }).then(() => {
                        window.location.href = "/posts"
                    }).catch((error) => {
                        console.log(error)
                    })
                }
            })
        </script>
</body>

</html>